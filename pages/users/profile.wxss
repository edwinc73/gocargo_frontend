.avatar-wrapper{
  width: 150px;
  height: 150px;
  border-radius: 50%;
  background-color:transparent;
}

.avatar{
  height: 100%;
  width: 100%;
  border-radius: 50%;
}

.user-info{
  align-items: center;
  width: 90%;
  align-self: start;
}

.container .rating{
  align-self: start;
}

.rating{
 display: flex;
}

.text-rating{
  margin-right: 30rpx;
}

.stars-container{
  position: relative;
  height: fit-content;
}

.star-full{
  margin-top: 10rpx;
  width: 36rpx;
  height: 36rpx;
}

.cover-bar{
  position: absolute;
  top: 0;
  bottom: 0;
  right: 0;
  height: 30px;
  width: 100%;
  background-color: #1D1D1D;
  display: block;
  z-index: 10;
  padding: 0;
  margin: 5px 0;
}