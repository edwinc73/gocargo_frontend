<!--pages/bookings/show.wxml-->
<view>
  <view class="container w-100">
    <view class="text-container flex w-100 justify-between">
      <view class="car-model">
        <text class="h2">{{car.car_model}}</text>
      </view>
      <view class="center">
        <image src="{{car.car_image}}" mode="aspectFill" />
      </view>
    </view>
    <hr/>
    <view class="form-container w-100 border">
      <view class="align-center flex justify-between">
        <text class="p bold">Booking dates</text>
        <view class="date-fields">
          <view class="p picker startDate">START: {{booking.startdate}}</view>
          <view class="hash">|</view>
          <view class="p picker endDate">RETRUN: {{booking.returndate}}</view>
        </view>
      </view>
      <hr/>
      <view class="align-center flex justify-between">
        <text class="p bold">Total Price</text> 
        <text class="h2">Â¥{{booking.total_price}}.00</text>
      </view>
      <hr/>
    </view>
    <view class="container">
      <view wx:if="{{booking.cancelled}}">The booking has been cancelled</view>
      <view wx:elif="{{booking.approved}}">The car owner has approved your application</view>
      <view wx:else class="btn-container">
        <button class="btn-primary" bindtap="tapApprove">Approve</button>
        <button class="btn-cancel" bindtap="tapCancel">Cancel</button>
      </view>
    </view>
  </view> 
</view>
