swiper-item, swiper-item image{
  width: 100%;
  height: 50vh;
}

swiper{
  height: 50vh;
}

.car-info{
  background-color: #1d1d1d;
  position: absolute;
  width: 100%;
  height: 50vh;
  display: block;
  top: 49.3%;
  border-radius: 20rpx;
}

.container{
  padding-top: 30px;
  justify-content: unset;
}

.container view{
  margin-bottom: 20rpx;
}

.show-owner image{
  width: 64px;
  height: 64px;
  border-radius: 50%;
}

.show-owner{
  margin: 10px 0;
}

.show-owner-detail{
  margin-left: 15px;
  flex-direction: column;
  justify-content: center;
}

.favourite{
  width: 48rpx;
  height: 48rpx;
  margin-top: 20rpx;
}

.container .rating{
  align-self: start;
}

.rating{
 display: flex;
}

.text-rating{
  margin-right: 30rpx;
}

.stars-container{
  position: relative;
  height: fit-content;
}

.star-full{
  margin-top: 10rpx;
  width: 36rpx;
  height: 36rpx;
}

.cover-bar{
  position: absolute;
  top: 0;
  bottom: 0;
  right: 0;
  height: 30px;
  width: 100%;
  background-color: #1D1D1D;
  display: block;
  z-index: 10;
  padding: 0;
  margin: 5px 0;
}

.show-owner .star-full{
  width: 36rpx;
  height: 36rpx;
}

.show-cta {
  align-items: center;
}

.title{
  gap: 10px;
  align-items: center;
}

.title text{
  margin: 0;
  padding: 0;
  text-transform: capitalize;
}

.cars-show-text .p{
  display: block;
}