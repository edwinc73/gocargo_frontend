swiper-item, swiper-item image{
  width: 100%;
  height: 50vh;
}

swiper{
  height: 50vh;
}

.car-info{
  background-color: #1d1d1d;
  position: absolute;
  width: 100%;
  height: 50vh;
  display: block;
  top: 49.3%;
  border-radius: 20rpx;
}

.container{
  padding-top: 30px;
  justify-content: unset;
}

.container view{
  margin-bottom: 20rpx;
}

.show-owner image{
  width: 64px;
  height: 64px;
  border-radius: 50%;
}

.show-owner{
  margin-bottom: 20px;
  margin-top: 20px;
}

.show-owner-detail{
  margin-left: 15px;
  flex-direction: column;
  justify-content: center;
}

.favourite{
  width: 48rpx;
  height: 48rpx;
  margin-top: 20rpx;
}

.container .p{
  align-self: start;
  margin-bottom: 10rpx;
}

.container .rating{
  align-self: start;
}

.rating{
 display: flex;
}

.text-rating{
  margin-right: 30rpx;
}

.star-full{
  margin-top: 10rpx;
  width: 36rpx;
  height: 36rpx;
}

.show-owner .star-full{
  width: 36rpx;
  height: 36rpx;
}

.show-cta {
  align-items: center;
