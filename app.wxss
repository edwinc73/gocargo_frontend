/**app.wxss**/
page{
  background-color: #1d1d1d;
  color: white;
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 30px;
  box-sizing: border-box;
} 

.w-100{
  width: 100%;
}
/* text styles */

.h1, .h2, .h3, .p{
  font-family: "poppins";
}

.h1{
  font-weight: 700;
  line-height: 3.5rem;
  font-size: 2.5rem;
}

.h2{
  font-weight: 600;
  line-height: 2.25rem;
  font-size: 1.5rem;
}

.h3{
  font-weight: 600;
  line-height: 1.5rem;
  font-size: 1rem;
}

.text-rating{
  font-size: 1.25rem;
  line-height: 1.875rem;
  font-weight: 500;
  text-transform: uppercase;
}

.p{
  color: #CACACA;
}

.text-left{
  text-align: left;
}

.text-center{
  text-align:center
}

.bg-white{
  background-color: #fff;
}

.text-main-color{
  color: var(--main-color);
}

.text-white{
  color: white;
}

.text-main{
  color: #FFA02A
}

/* button styles */

.btn{
  text-transform: capitalize;
  width: 100%;
  padding: 18rpx;
  border-radius: 4px;
  color: #1d1d1d;
  text-align: center;
  margin: 0 auto;
}

.btn-mini{
  text-transform: capitalize;
  padding: 18rpx 90rpx;
  border-radius: 4px;
  color: #1d1d1d;
  text-align: center;
}

.btn-primary{
  background-color: #FFA02A;
  font-family: "poppins";
  font-weight: 600;
  line-height: 64rpx;
  font-size: 1.2rem;
}

/* spacer styling */


hr {
  width: 100%;
  height: 1px;
  display: block;
  border: none;
  border-top: 1px dashed white;
  border-width: 1px;
  margin-top: 60rpx;
  margin-bottom: 60rpx;
}

/* card styling*/

.card-grid{
  display: grid;
  grid-template-columns: 1fr 1fr;
  grid-gap: 1rem;
}

.card-image{
  width: calc((100vw / 2) - 1.5rem);
  height: calc((100vw / 2) - 1.5rem);

  border-radius: 40rpx;
}

.show-card{
  margin: 40rpx auto;
  border-radius: 35px;
  background-color: rgba(217,217,217,0.35);
  padding: 15px 20px;
}

.navigation-bar{
  display: block;
  height: 90px;
}

/* flex */

.flex{
  display: flex;
}

.justify-between{
  justify-content: space-between;
}